@model IEnumerable<techwales.Models.USER>

@{
    ViewBag.Title = "UserList";
    Layout = "~/Views/Shared/_Layout_Login.cshtml";
}

<h2>UserList</h2>

<center>
    @using (Html.BeginForm("UserList", "Account", FormMethod.Get))
    {@Html.RadioButton("search_type", "Athlete")<span>Athlete</span>
    @Html.RadioButton("search_type", "Scout")<span>Scout</span>
      
    <input type="submit" value="Search" />

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Username)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Isactive)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Isremembered)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Username)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Isactive)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Isremembered)
                </td>
                <td>
                    @Html.ActionLink("Update", "Useredit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "userdel", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
}
</center>
